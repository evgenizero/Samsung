<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@string/background"
    android:orientation="vertical" >

    <bg.tarasoft.smartsales.views.HeaderBar
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </bg.tarasoft.smartsales.views.HeaderBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/productsGrid"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="@integer/columns"
            android:stretchMode="columnWidth"
            android:background="@drawable/main_back"
            android:verticalSpacing="25dp" />

        <TextView
            android:id="@+id/update_all_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="Update all"
            android:textColor="@color/text_color"
            android:textSize="@dimen/grid_item_text_size" />
    </LinearLayout>

</LinearLayout>